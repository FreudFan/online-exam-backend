<web-app version="3.0"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
 
    <!-- Servlet declaration can be omitted in which case
         it would be automatically added by Jersey  -->
         
    <servlet>
        <servlet-name>server.RestConfig</servlet-name>
        <load-on-startup>1</load-on-startup>
    </servlet>
 
    <servlet-mapping>
        <servlet-name>server.RestConfig</servlet-name>
        <url-pattern>/rest/*</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>server.startup.ForwardServlet</servlet-name>
        <servlet-class>server.startup.ForwardServlet</servlet-class>
    </servlet>
 
    <servlet-mapping>
        <servlet-name>server.startup.ForwardServlet</servlet-name>
        <url-pattern>*.json</url-pattern>
    </servlet-mapping>
   
</web-app>